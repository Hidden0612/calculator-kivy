<MyButton@Button>:
	font_size: 38
	background_color: 'cyan'

#--------------#
<MyGridLayout>:
	id: calculator
	display: input
	rows: 6
	padding: 5
	spacing: 5

	canvas:
		Color:
			rgba: 0.1, 0.5, 0.6, 1
		RoundedRectangle:
			pos:self.pos
			size:self.size

	#--------------#
	BoxLayout:
		TextInput:
			id: input
			font_size: 40
			multiline: False
			border: 20,20,20,20
	#--------------#
	BoxLayout:

		spacing: 5
		MyButton:
			text: '('
			on_press: input.text += self.text
		MyButton:
			text: ')'
			on_press: input.text += self.text
		MyButton:
			text: '%'
			on_press: input.text += self.text
		MyButton:
			text: '//'
			on_press: input.text += self.text

	#--------------#
	BoxLayout:
		spacing: 5
		MyButton:
			text: '7'
			on_press: input.text += self.text
		MyButton:
			text: '8'
			on_press: input.text += self.text
		MyButton:
			text: '9'
			on_press: input.text += self.text
		MyButton:
			text: '+'
			on_press: input.text += self.text

	#--------------#
	BoxLayout:
		spacing: 5
		MyButton:
			text: '4'
			on_press: input.text += self.text
		MyButton:
			text: '5'
			on_press: input.text += self.text
		MyButton:
			text: '6'
			on_press: input.text += self.text
		MyButton:
			text: '-'
			on_press: input.text += self.text

	#--------------#
	BoxLayout:
		spacing: 5
		MyButton:
			text: '1'
			on_press: input.text += self.text
		MyButton:
			text: '2'
			on_press: input.text += self.text
		MyButton:
			text: '3'
			on_press: input.text += self.text
		MyButton:
			text: '*'
			on_press: input.text += self.text

	#--------------#
	BoxLayout:
		spacing: 5
		MyButton:
			text: 'C'
			on_press: input.text = ''
		MyButton:
			text: '0'
			on_press: input.text += self.text
		MyButton:
			text: '/'
			on_press: input.text += self.text
		MyButton:
			text: '='
			on_press: calculator.calculate(input.text)